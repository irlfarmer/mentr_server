# Server Configuration
PORT=5000
NODE_ENV=development

# Database
# For local development (MongoDB installed locally)
# MONGODB_URI=mongodb://localhost:27017/mentr

# For MongoDB Atlas (recommended for production-like testing)
# Replace with your actual MongoDB Atlas connection string
MONGODB_URI=mongodb+srv://mentr-admin:<password>@mentr-cluster.xxxxx.mongodb.net/mentr?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# LinkedIn OAuth
# Note: Use the new LinkedIn OAuth 2.0 scopes: openid+profile+w_member_social+email
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret
LINKEDIN_CALLBACK_URL=http://localhost:5000/api/auth/linkedin/callback

# Client URL
CLIENT_URL=http://localhost:3000

# Email Configuration - Resend
RESEND_API_KEY=re_your_resend_api_key
FROM_EMAIL=noreply@yourdomain.com
FRONTEND_URL=http://localhost:3000

# Legacy SMTP (for fallback)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# AWS S3 (for file uploads)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=mentr-uploads

# Stripe (for payments)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Daily.co (for video calls)
DAILY_API_KEY=your_daily_api_key
DAILY_WEBHOOK_SECRET=your_daily_webhook_secret
